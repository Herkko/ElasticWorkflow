# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   					controllers.Application.index
GET		/models									controllers.Models.list
GET		/models/new								controllers.Models.add
GET		/models/:id								controllers.Models.show(id: Int)
GET		/models/:id/new							controllers.Processes.add(id: Int)
GET     /models/:modelId/relations/:elemId/new  controllers.Relations.add(modelId: Int, elemId: Int)
GET     /json									controllers.JsonController.showElement
GET     /show									controllers.Application.showScala
GET  	/*path  								controllers.Application.removeSlash(path: String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
